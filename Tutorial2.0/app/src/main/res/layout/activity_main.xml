<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="javelindevices.com.javelin_tutorial_2_0.MainActivity"
    android:clickable="false">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrator"
        android:id="@+id/vibrator_toggle1"
        android:enabled="true"
        android:textOff="Vibrator: Off"
        android:textOn="Vibrator: On"
        android:checked="false"
        android:clickable="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED"
        android:id="@+id/led_toggle1"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/vibrator_toggle1"
        android:layout_alignParentStart="true"
        android:textOff="LED: Off"
        android:textOn="LED: On"
        android:layout_row="1"
        android:layout_column="0" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED"
        android:id="@+id/led_toggle2"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/vibrator_toggle1"
        android:layout_alignParentStart="true"
        android:textOff="LED: Off"
        android:textOn="LED: On"
        android:layout_row="1"
        android:layout_column="1" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED"
        android:id="@+id/led_toggle3"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/vibrator_toggle1"
        android:layout_alignParentStart="true"
        android:textOff="LED: Off"
        android:textOn="LED: On"
        android:layout_row="1"
        android:layout_column="2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x_acc1"
        android:layout_below="@+id/led_toggle1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:text="X:"
        android:enabled="true"
        android:editable="false"
        android:layout_row="2"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x_acc2"
        android:layout_below="@+id/led_toggle1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:text="X:"
        android:enabled="true"
        android:editable="false"
        android:layout_row="2"
        android:layout_column="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x_acc3"
        android:layout_below="@+id/led_toggle1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:text="X:"
        android:enabled="true"
        android:editable="false"
        android:layout_row="2"
        android:layout_column="2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/y_acc1"
        android:layout_below="@+id/x_acc1"
        android:layout_alignEnd="@+id/x_acc1"
        android:enabled="true"
        android:text="Y:"
        android:layout_row="3"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/y_acc2"
        android:layout_below="@+id/x_acc1"
        android:layout_alignEnd="@+id/x_acc1"
        android:enabled="true"
        android:text="Y:"
        android:layout_row="3"
        android:layout_column="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/y_acc3"
        android:layout_below="@+id/x_acc1"
        android:layout_alignEnd="@+id/x_acc1"
        android:enabled="true"
        android:text="Y:"
        android:layout_row="3"
        android:layout_column="2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z_acc1"
        android:enabled="true"
        android:text="Z:"
        android:layout_below="@+id/y_acc1"
        android:layout_alignParentStart="true"
        android:layout_row="4"
        android:layout_column="0" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrator"
        android:id="@+id/vibrator_toggle2"
        android:enabled="true"
        android:textOff="Vibrator: Off"
        android:textOn="Vibrator: On"
        android:checked="false"
        android:clickable="true"
        android:layout_row="0"
        android:layout_column="1" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrator"
        android:id="@+id/vibrator_toggle3"
        android:enabled="true"
        android:textOff="Vibrator: Off"
        android:textOn="Vibrator: On"
        android:checked="false"
        android:clickable="true"
        android:layout_row="0"
        android:layout_column="2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z_acc2"
        android:enabled="true"
        android:text="Z:"
        android:layout_below="@+id/y_acc1"
        android:layout_alignParentStart="true"
        android:layout_row="4"
        android:layout_column="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z_acc3"
        android:enabled="true"
        android:text="Z:"
        android:layout_below="@+id/y_acc1"
        android:layout_alignParentStart="true"
        android:layout_row="4"
        android:layout_column="2" />

</GridLayout>
